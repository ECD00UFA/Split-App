<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contactImg"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        android:src="@drawable/profile_img"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/img_round_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/_5sdp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/contactNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="ContactName"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintStart_toEndOf="@id/contactImg"
        app:layout_constraintBottom_toBottomOf="@id/contactImg"
        app:layout_constraintTop_toTopOf="@id/contactImg"
        />
    <TextView
        android:id="@+id/expensesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/no_expenses"
        android:textColor="@color/appIconColor"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/contactNameTxt"
        app:layout_constraintTop_toTopOf="@id/contactNameTxt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>