<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/headerView"
                layout="@layout/custom_header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_profile_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerView" />

            <TextView
                android:id="@+id/groupTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/group_name"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toEndOf="@id/profileImg"
                app:layout_constraintTop_toTopOf="@+id/profileImg" />

            <EditText
                android:id="@+id/groupNameEdt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_22sdp"
                android:fontFamily="@font/poppins_medium"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/groupTxt"
                app:layout_constraintTop_toBottomOf="@+id/groupTxt" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/group_description"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toEndOf="@id/profileImg"
                app:layout_constraintTop_toBottomOf="@id/groupNameEdt" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_22sdp"
                android:fontFamily="@font/poppins_medium"
                android:inputType="text"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_description"
                app:layout_constraintTop_toBottomOf="@+id/tv_description" />

            <TextView
                android:id="@+id/tv_lbl_members"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/appIconColor"
                android:fontFamily="@font/poppins_bold"
                android:gravity="start|center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/group_members"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_description" />


            <ImageView
                android:id="@+id/ic_add_members"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add_members"
                app:layout_constraintStart_toStartOf="@id/tv_lbl_members"
                app:layout_constraintTop_toBottomOf="@id/tv_lbl_members" />

            <TextView
                android:id="@+id/tv_lbl_add_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/add_members"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@id/ic_add_members"
                app:layout_constraintStart_toEndOf="@id/ic_add_members"
                app:layout_constraintTop_toTopOf="@id/ic_add_members" />

            <ImageView
                android:id="@+id/ic_invite_members"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_invite"
                app:layout_constraintStart_toStartOf="@id/ic_add_members"
                app:layout_constraintTop_toBottomOf="@id/ic_add_members" />


            <TextView
                android:id="@+id/tv_lbl_invite_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/invite_members"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@id/ic_invite_members"
                app:layout_constraintStart_toEndOf="@id/ic_invite_members"
                app:layout_constraintTop_toTopOf="@id/ic_invite_members" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/rv_group_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp"
                app:layout_constraintTop_toBottomOf="@id/ic_invite_members" />


            <TextView
                android:id="@+id/typeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/type"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_group_members" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/groupTypeRev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/typeTxt"
                tools:itemCount="4"
                tools:listitem="@layout/adapter_group_type_layout" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>