<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/activityImgView"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/activityImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_img" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/activityDetailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/you_created_the_group_raah"
            android:textColor="@color/appTextColor"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/activityImgView"
            app:layout_constraintTop_toTopOf="@id/activityImgView" />

        <TextView
            android:id="@+id/moneyDetailsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/you_get_back_inr_100_00"
            android:textColor="@color/appYellow"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/activityImgView"
            app:layout_constraintStart_toEndOf="@id/activityImgView"
            app:layout_constraintTop_toBottomOf="@id/activityDetailTxt" />

        <TextView
            android:id="@+id/activityTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/yesterday_6_31"
            android:textColor="@color/appIconColor"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/activityDetailTxt"
            app:layout_constraintTop_toBottomOf="@id/moneyDetailsTxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>